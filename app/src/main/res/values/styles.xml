<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Color theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/colorPrimaryTranslucent</item>

        <!-- Drawer arrow -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <!-- *********************************** Toolbar ******************************************* -->

    <!-- Drawer arrow style -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle">
        <item name="title">@string/title_toolbar</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/elevation_toolbar</item>
    </style>

    <!-- *********************************** TextView ****************************************** -->

    <!-- TextView sub-style -->
    <style name="TextViewSubStyle" parent="AppTheme">
        <item name="android:maxLines">@integer/max_lines_text_view</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- TextView style (level 1, black, normal) -->
    <style name="TextViewStyle1" parent="TextViewSubStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TextView style (level 1, darker gray, italic) -->
    <style name="TextViewStyle2" parent="TextViewSubStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- TextView style (level 2, normal) -->
    <style name="TextViewStyle3">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- TextView style (level 3, italic) -->
    <style name="TextViewStyle4" parent="TextViewStyle3">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- TextView style (level 3, darker gray, normal) -->
    <style name="TextViewStyle5" parent="TextViewStyle3">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!-- TextView style (level 2, darker gray, normal) -->
    <style name="TextViewStyle6">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- TextView style (level 3, white, normal) -->
    <style name="TextViewStyle7" parent="TextViewSubStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TextView style (level 2, white, normal) -->
    <style name="TextViewStyle8" parent="TextViewStyle7">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- TextView style (level 1, white, normal, bold) -->
    <style name="TextViewStyle9" parent="TextViewStyle7">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- *********************************** NavigationView ************************************ -->

    <!-- NavigationView style -->
    <style name="NavigationViewStyle">
        <item name="headerLayout">@layout/activity_main_header_drawer</item>
        <item name="menu">@menu/activity_main_menu_drawer</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <!-- *********************************** BottomNavigationView ****************************** -->

    <!-- BottomNavigationView style -->
    <style name="BottomNavigationViewStyle">
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color</item>
        <item name="android:elevation" tools:targetApi="21">@dimen/elevation_bottom_navigation_view</item>
    </style>

    <!-- *********************************** RatingBar ***************************************** -->

    <!-- RatingBar style -->
    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">@integer/max_stars_rating_bar</item>
        <item name="android:rating">@integer/max_stars_rating_bar</item>
        <item name="android:progressTint" tools:targetApi="21">@color/colorPrimary</item>
    </style>

</resources>
